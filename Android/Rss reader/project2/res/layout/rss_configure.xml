<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/topicInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/rbs"
        android:ems="10" >

        <requestFocus />
    </EditText>
    
    <Button
        android:id="@+id/widgetSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Select" />

    <CheckBox
        android:id="@+id/checkPolitics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/topicInput"
        android:layout_marginTop="30dp"
        android:text="@string/chk_pol" />

    <CheckBox
        android:id="@+id/checkEco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/checkPolitics"
        android:layout_marginTop="14dp"
        android:text="@string/chk_eco" />

</RelativeLayout> <!-- Todo, make this layout look better -->
