<div class="container">
	<div class="Title">		
		<h1>Create User</h1>
	</div>
	<% if flash[:notice] %>
		<h2 class="error"><%= flash[:notice] %></h2>
		<%= link_to "Back to log in page! ", first_logout_path %>		
	<% else %>
	
	<!-- See if this one is applicable to other types of errors-->
	<% if @user.errors.any? %>
		<div id="error_messages">
		
		<ul class = "errorlist">
		<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
		</div>
	<% end %>	


	<%= form_for @user do |f| %>
		<div class="text_field">
			<%= f.label :first_name %>
			<%= f.text_field :first_name %>
		</div>
		<div class="text_field">
			<%= f.label :last_name %>
			<%= f.text_field :last_name %>
		</div>
		<div class="text_field">
			<%= f.label :email %>
			<%= f.text_field :email %>
		</div>
		<div class="text_field">
			<%= f.label :password %>
			<%= f.text_field :password %>
		</div>
		<div class="submit">
			<%= f.submit "create user" %>
		</div>
		
	<% end %>

	<p><%= link_to "Back to log in page! ", first_logout_path %></p>
	<% end %>
	<div class="footer">
		<p>@steffo 2013<p>
	</div>
	
</div>