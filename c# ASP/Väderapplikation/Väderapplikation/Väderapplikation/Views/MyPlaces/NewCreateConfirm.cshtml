        <div id="regionInput" class="editor-field">
            @Html.EditorFor(model => model.region)
            @Html.ValidationMessageFor(model => model.region)
        </div>

        <ul>
            @foreach (var region in (ViewData["regions"] as List<string>))
            {
                <li>
                     <a class="regionLink" onclick="getRegion(this.text)" href="#">@region</a>
