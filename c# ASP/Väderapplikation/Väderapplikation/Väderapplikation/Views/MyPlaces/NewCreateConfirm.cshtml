    ViewBag.Title = "CreateConfirm";
}

<h2>CreateConfirm</h2>
<h3>Vill du spara den här platsen?</h3>

@using (Html.BeginForm("NewCreate", "MyPlaces"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>

        <div class="editor-label">
            @Html.LabelFor(model => model.place)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.place)
            @*@Html.TextBoxFor(model => model.place, new { @disabled = "disabled" }) Den här skapar fel om jag försöker med det*@
