<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


        <Button
            android:id="@+id/widgetSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:text="@string/select" />

        <RadioGroup
            android:id="@+id/rbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp" >

            <RadioButton
                android:id="@+id/stockholmButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stockholm" />

            <RadioButton
                android:id="@+id/vaxjoButton"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:checked="true"
                android:text="växjö" />

            <RadioButton
                android:id="@+id/kalmarButton"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:text="@string/kalmar" />

            <RadioButton
                android:id="@+id/kirunaButton"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:text="@string/kiruna" />

            <RadioButton
                android:id="@+id/halmstadButton"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="54dp"
                android:text="@string/halmstad" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >
        </LinearLayout>

</RelativeLayout> <!-- Todo, make this layout look better -->
